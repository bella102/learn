<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    {% block head %}
      <title>{{ site_title }} - {% block title %}{% endblock %}</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      {% include '../blocks/favicons.twig' %}
      <link rel="stylesheet" href="css/styles.css">
    {% endblock %}
  </head>
  <body>

    {% block header %}
      {% include 'header.twig' %}
      {% include 'navigation.twig' %}
    {% endblock %}

    {% block content %}{% endblock %}

    {% block footer %}
      {% include "footer.twig" %}
    {% endblock %}

    {% include "../blocks/index-links.twig" %}

    {% block footer_scripts %}
      <script src="js/lib/media.match.min.js"></script>
      <script src="js/lib/enquire.min.js"></script>
      <script src="js/lib/jquery.min.js"></script>
      <script src="js/lib/chosen.jquery.min.js"></script>
      <script src="js/script.js"></script>
    {% endblock %}
  </body>
</html>
